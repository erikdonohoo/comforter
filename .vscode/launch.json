{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "XDebug Comforter",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/www/web/": "${workspaceFolder}/web"
            },
            "port": 9005,
            "xdebugSettings": {
                "max_children": 128,
                "max_depth": 5,
                "max_data": 2048
            }
        },
        {
            "name": "XDebug tests",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "xdebugSettings": {
                "max_children": 128,
                "max_depth": 5,
                "max_data": 2048
            }
        }
    ]
}
